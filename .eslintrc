{
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "indent": [2, 2, { "SwitchCase": 1 }],
    "quotes": [2, "single"],
    "linebreak-style": [2, "windows"],
    "semi": [2, "always"]
  },
  "env": {
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended"
}
